<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Extend Checklist Form View -->
    <record id="view_checklist_enhanced_form" model="ir.ui.view">
        <field name="name">checklist.checklist.enhanced.form</field>
        <field name="model">checklist.checklist</field>
        <field name="inherit_id" ref="netcheck_2.checklist_checklist_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="action_view_report_data"
                        string="Report Data" type="object" icon="fa-bar-chart"
                        attrs="{'invisible': [('has_report_data', '=', False)]}">
                    <field name="has_report_data" invisible="1"/>
                </button>
                <button class="oe_stat_button" name="action_create_report_data"
                        string="Create Report Data" type="object" icon="fa-plus-circle"
                        attrs="{'invisible': ['|', ('state', '!=', 'done'), ('has_report_data', '=', True)]}"/>
                <button class="oe_stat_button" name="print_enhanced_report"
                        string="Enhanced Report" type="object" icon="fa-print"
                        attrs="{'invisible': [('has_report_data', '=', False)]}"/>
            </xpath>
            
            <!-- Add report data info in a new page -->
            <xpath expr="//notebook" position="inside">
                <page name="report_data" string="Enhanced Reports" 
                      attrs="{'invisible': [('has_report_data', '=', False)]}">
                    <group string="Report Information">
                        <group>
                            <field name="has_report_data" readonly="1"/>
                            <field name="latest_report_data_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <field name="report_data_ids" readonly="1">
                        <tree>
                            <field name="completion_date"/>
                            <field name="total_lines"/>
                            <field name="completed_lines"/>
                            <field name="completion_percentage" widget="percentage"/>
                            <button name="%(action_report_checklist_enhanced)d" 
                                    string="Print" 
                                    type="action" 
                                    icon="fa-print"
                                    class="btn-link"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Extend Checklist Tree View -->
    <record id="view_checklist_enhanced_tree" model="ir.ui.view">
        <field name="name">checklist.checklist.enhanced.tree</field>
        <field name="model">checklist.checklist</field>
        <field name="inherit_id" ref="netcheck_2.checklist_checklist_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="has_report_data" string="Enhanced Report"/>
            </xpath>
        </field>
    </record>

    <!-- Add enhanced report action to existing action menu -->
    <record id="action_checklist_enhanced_report" model="ir.actions.server">
        <field name="name">Print Enhanced Report</field>
        <field name="model_id" ref="netcheck_2.model_checklist_checklist"/>
        <field name="binding_model_id" ref="netcheck_2.model_checklist_checklist"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
for record in records:
    if record.state == 'done':
        action = record.print_enhanced_report()
        if action:
            break
        </field>
    </record>

</odoo>
