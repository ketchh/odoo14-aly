<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="move_report" model="ir.actions.report">
        <field name="name">Move Report</field>
        <field name="model">fleet.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">bloomup_fleet_move.move_report_view</field>
        <field name="report_file">bloomup_fleet_move.move_report</field>
        <field name="binding_model_id" ref="model_fleet_move"></field>
        <field name="binding_type">report</field>
    </record>


    <template id="move_report_view">
        <t t-call="web.html_container">
        
            <t t-foreach="docs" t-as="doc">    
                <t t-call="web.external_layout">
                <div style="display: flex; text-align: center;">
                    <h1 t-field="doc.partner_id.name"></h1>
                    <h3 t-field="doc.confirmed_date"></h3>
                    <p t-field="doc.timeslot"></p>
                </div>
                
                <h5>
                 Ritiro
                </h5>            
                <p t-field="doc.pickup_address"></p>
                <p t-field="doc.pickup_address_copy"></p>
                <h5>
                 Consegna
                </h5>
                <p t-field="doc.delivery_address"></p>
                <p t-field="doc.delivery_address_copy"></p>
                
                <h5>
                 Contatti e note
                </h5>
                <p t-field="doc.name_fleetmanager"></p>                    
                <p t-field="doc.email_fleetmanager"></p>
                <p t-field="doc.phone_fleetmanager"></p>
                <p t-field="doc.note"></p>

                </t>
            </t>
        </t>
    </template>
</odoo>